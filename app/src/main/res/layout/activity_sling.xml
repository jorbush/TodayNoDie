<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SlingActivity"
    android:padding="20dp">
    <TextView
        android:id="@+id/txt_sling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="@string/how_to_make_a_sling"
        android:textColor="#F43636"
        android:textSize="30sp" />
    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_sling"
        android:layout_centerHorizontal="true"
        android:text="USE\nSlings can be used for many different injuries. They are most often used when you have a broken (fractured) or dislocated arm or shoulder."
        android:layout_gravity="center_horizontal"
        android:id="@+id/txt_usesling"/>
    <Button
        android:id="@+id/btn_videosling"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_below="@+id/imageStepsSling"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:padding="23dp"
        android:text="WATCH VIDEO"
        android:textColor="#F43636"
        android:background="#C9F1ECEC"
        android:onClick="openVideoSling"/>

    <ImageView
        android:id="@+id/imageStepsSling"
        android:layout_width="220dp"
        android:layout_height="380dp"
        app:srcCompat="@drawable/stepssling"
        android:layout_below="@+id/txt_usesling"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>


</RelativeLayout>